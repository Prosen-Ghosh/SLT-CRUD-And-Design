<!--Edit Yes No Questions-->
<div id='edit-<%- question_id %>' class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Add New Yes/No Question</h4>
      </div>
      <div class="modal-body">
        <form action='' method="POST" name="form1-<%- question_id %>" id="form1-<%- question_id %>" enctype="application/x-www-form-urlencoded">
          <input type="hidden" name="_method" value="PUT"/>
          <div class="form-group">
              <label for="word">Question Title:</label>
              <input type="text" class="form-control" id="question_title" name='question_title' placeholder="Ex: Sleep" value="<%- question_title %>">
              <input type="hidden" id="question_id" name="question_id" value="<%- question_id %>">
          </div>
          <div class="form-group">
              <label for="Description">Question:</label>
              <input type="text" class="form-control" id="question" name='question' placeholder="Ex: Is sleep bought by customers?" value="<%- question %>">
          </div>
          <div class="form-group">
              <label for="Synonyms">Answer:</label>
              <input type="text" class="form-control" id="answer" name='answer' placeholder="Ex: NO" value="<%- answer %>">
          </div>

        </form>
      </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-warning ">Reset</button>
      <button type="submit" form='form1-<%- question_id %>' class="btn btn-success ">Submit</button>
    </div>
    </div>
  </div>
</div>

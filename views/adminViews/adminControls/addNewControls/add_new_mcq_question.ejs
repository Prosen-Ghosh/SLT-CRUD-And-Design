<div> <!--Model Div Start-->
  <!-- Add New Country -->
  <button class="btn btn-info active" id='countryModelBtn'>Add New MCQ Question</button>

  <div id='myModel'class="modal fade">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Add New MCQ Question</h4>
        </div>
        <div class="modal-body">
          <form action='' method="POST">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="word">Question Title:</label>
                  <input type="text" class="form-control" id="word" name='word' placeholder="Ex: Who Is The President Of United States?">
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="mcqType">MCQ Type:</label>
                  <select class="selectpicker form-control" data-live-search="true">
                    <option data-tokens="ketchup mustard">Question</option>
                    <option data-tokens="mustard">Visual</option>
                    <option data-tokens="frosting">Audio</option>
                  </select>
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="Description">Option 1:</label>
                  <input type="text" class="form-control" id="description" name='description' placeholder="Ex: Muhammad Abdul Qaium">
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="Description">Option 2:</label>
                  <input type="text" class="form-control" id="description" name='description' placeholder="Ex: Prosen Ghosh">
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="Description">Option 3:</label>
                  <input type="text" class="form-control" id="description" name='description' placeholder="Ex: Donald Trump">
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="Description">Option 4:</label>
                  <input type="text" class="form-control" id="description" name='description' placeholder="Ex: Sany Alam Shovon">
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="Description">Option 5:</label>
                  <input type="text" class="form-control" id="description" name='description' placeholder="Ex: Aishwarja Jamil">
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="Description">Answer:</label>
                  <input type="text" class="form-control" id="description" name='description' placeholder="Ex: Donald Trump">
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="Description">Content Id:</label>
                  <input type="text" class="form-control" id="description" name='description' placeholder="Ex: Image/Word">
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                  <label for="Description">Hint:</label>
                  <input type="text" class="form-control" id="description" name='description' placeholder="Ex: He Is A American Businessman.">
              </div>
            </div>
            <button type="submit" class="btn btn-success ">Submit</button>
            <button type="button" class="btn btn-warning ">Reset</button>
          </form>
        </div>
      <div class="modal-footer">
          ...
      </div>
      </div>
    </div>
  </div>
</div> <!--Model Div End-->

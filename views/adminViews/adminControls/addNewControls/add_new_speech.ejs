<div> <!--Model Div Start-->
  <!-- Add New Country -->
  <div>
    <button class="btn btn-info active" id='countryModelBtn'>Add New Speech</button>
  </div>
  <br/>
  <div id='myModel'class="modal fade">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Add New Speech</h4>
        </div>
        <div class="modal-body">
          <form action='' method="POST" name="form1" id="form1">
            <div class="form-group">
                <label for="Description">Speech Type:</label>
                <select class="selectpicker form-control" data-live-search="true" name='speech_type' id="speech_type" onchange="changeType(this);">
                  <option value="null">Select An Option</option>
                  <option data-tokens="Word" value="Word">Word</option>
                  <option data-tokens="Image" value="Image">Image</option>
                  <option data-tokens="Paragraph" value="Paragraph">Paragraph</option>
                </select>
            </div>
            <div class="form-group">
                <label for="contentId">Content Id:</label>
                <select class="selectpicker form-control content_id" data-live-search="true" name="content_id" id="content_id">
                </select>
            </div>
            <div class="form-group">
                <label for="hint">Hint:</label>
                <input type="text" class="form-control" id="hint" name='hint' placeholder="Ex: Hint">
            </div>

          </form>
        </div>
      <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default ">Close</button>
        <button type="submit" form='form1' class="btn btn-success ">Submit</button>
      </div>
      </div>
    </div>
  </div>
</div> <!--Model Div End-->
